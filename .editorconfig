#Used to define and maintain consistent coding styles between different editors.

#set root = true for Root editorconfig file.

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

#3 space indentation
indent_style = space
indent_size = 4

#remove any whitespace characters preceding newline characters.
trim_trailing_whitespace = true

#set how line breaks are represented
end_of_line = lf

insert_final_newline = true
